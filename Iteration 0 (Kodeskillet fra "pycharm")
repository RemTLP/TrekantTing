import random
import turtle

canv_width = 800
canv_height = 800

def turtle_setup(canv_width, canv_height):
    Dot = turtle.Turtle()
    screen = Dot.getscreen()
    screen.setup(canv_width, canv_height)
    screen.setworldcoordinates(0, 0, canv_width, canv_height)

    Dot.speed(0)
    Dot.color("black")
    return Dot

def randopoint():
    xk = random.randint(0, canv_width)
    yk = random.randint(0, canv_height)
    randopoint = (xk, yk)
    p = randopoint
    return p

